                                              <summary
                                                id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}"
                                                class="menu-drawer__menu-item link link--text list-menu__item focus-inset"
                                              >
                                                <div class="link-item">
                                                  {% for item in shop.metaobjects.navigation_icons.values %}
                                                    {% assign title = childlink.title %}

                                                    {% if item.link_title == title %}
                                                        {{ item.image.value | image_url: width: 20 | image_tag }}
                                                    {% endif %}
                                                  {% endfor %}
                                                </div>
                                                {{ childlink.title | escape }}
                                                {% render 'icon-arrow' %}
                                                {% render 'icon-caret' %}
                                              </summary>
                                              <div
                                                id="childlink-{{ childlink.handle | escape }}"
                                                class="menu-drawer__submenu has-submenu gradient motion-reduce"
                                              >
                                                <ul
                                                  class="menu-drawer__menu-last custom-drawer__menu-last menu-drawer__menu list-menu"
                                                  role="list"
                                                  tabindex="-1"
                                                >
                                                  {%- for grandchildlink in childlink.links -%}
                                                    <li>
                                                      <a
                                                        id="HeaderDrawer-{{ link.handle }}-{{ childlink.handle }}-{{ grandchildlink.handle }}"
                                                        href="{{ grandchildlink.url }}"
                                                        class="custom-drawer__menu-item link link--text list-menu__item focus-inset{% if grandchildlink.current %} menu-drawer__menu-item--active{% endif %}"
                                                        {% if grandchildlink.current %}
                                                          aria-current="page"
                                                        {% endif %}
                                                      >
                                                        <div class="link-item">
                                                          {% for item in shop.metaobjects.navigation_icons.values %}
                                                            {% assign title = grandchildlink.title %}

                                                            {% if item.link_title == title %}
                                                                {{ item.image.value | image_url: width: 20 | image_tag }}
                                                            {% endif %}
                                                          {% endfor %}
                                                        </div>
                                                        {{ grandchildlink.title | escape }}
                                                      </a>
                                                    </li>
                                                  {%- endfor -%}
                                                </ul>
                                              </div>
                                            </details>
                                          {%- endif -%}
                                        </li>
                                      {%- endfor -%}
                                    </ul>
                                  </div>
                                </div>
                              </details>
                            {%- else -%}
                              <a
                                id="HeaderDrawer-{{ link.handle }}"
                                href="{{ link.url }}"
                                class="menu-drawer__menu-item list-menu__item link link--text focus-inset{% if link.current %} menu-drawer__menu-item--active{% endif %}"
                                {% if link.current %}
                                  aria-current="page"
                                {% endif %}
                              >
                                {{ link.title | escape }}
                              </a>
                            {%- endif -%}
                          </li>
                        {%- endfor -%}
                      </ul>
                    </nav>
                  </div>
                </details>
                {% endif %}
              {% endfor %}
            </div>
          </div>
          <div class="menu-drawer__footer js-menu-drawer__footer">
            <div class="menu-drawer__footer-items">
              <div class="menu-drawer__cart">
