<div class="banner-section__info">
  <div class="banner-section__info-wrapper page-width">
    {% if section.settings.heading != blank %}
      <h2 class="banner-section__heading">{{ section.settings.heading }}</h2>
    {% endif %}
    <div class="banner-section__cards">
      {%- for block in section.blocks -%}
        {% case block.type %}
          {%- when 'info_block' -%}
            <div class="banner-section__card">
              {% if block.settings.icon != blank %}
                {{ block.settings.icon | image_url: width: 50 | image_tag: class: 'banner-section__card-icon' }}
              {% endif %}
              {% if block.settings.heading != blank %}
                <h3 class="banner-section__card-heading">{{ block.settings.heading }}</h3>
              {% endif %}
              {% if block.settings.content != blank %}
                <p class="banner-section__card-content">{{ block.settings.content }}</p>
              {% endif %}
            </div>
        {% endcase %}
      {%- endfor -%}
    </div>
  </div>
</div>
{%- style -%}
  #shopify-section-{{ section.id }} {
    @media screen and (min-width: 750px) {
      .banner-section__info{
          background-image: url({{ section.settings.banner_desktop | image_url: width: 1920 }});
          background-repeat: no-repeat;
          background-position: center;
          background-size: cover;
          max-width: 1920px;
          width: 100%;
          margin: 0 auto;
          padding: 120px 0px 120px 0px;
      }
    }
    @media screen and (max-width: 749px) {
        .banner-section__info{
        background-image: url({{ section.settings.banner_mobile | image_url: width: 749 }});
          background-repeat: no-repeat;
          background-position: center;
          background-size: cover;
          max-width: 750px;
          width: 100%;
          margin: 0 auto;
          padding: 80px 0 80px 0px;
       }
    }
  }
{%- endstyle -%}
{% schema %}
{
  "name": "Section Information",
  "tag": "section",
  "class": "section-information",
  "settings": [
    {
      "type": "image_picker",
      "id": "banner_desktop",
      "label": "Banner desktop"
    },
    {
      "type": "image_picker",
      "id": "banner_mobile",
      "label": "Banner mobile"
    },
    {
      "type": "text",
      "id": "heading",
      "label": "Heading"
    }
  ],
  "blocks": [
    {
      "type": "info_block",
      "name": "Info Block",
      "settings": [
        {
          "type": "image_picker",
          "id": "icon",
          "label": "Icon"
        },
        {
          "type": "text",
          "id": "heading",
          "label": "Heading"
        },
        {
          "type": "inline_richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ],
  "presets": [
    {
      "name": "Section Information"
    }
  ]
}
{% endschema %}
