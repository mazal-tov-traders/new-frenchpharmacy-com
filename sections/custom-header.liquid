                  <summary
                    id="HeaderDrawer"
                    class="menu-drawer__menu-item menu-drawer__menu-item-block menu-drawer__menu-item-block--{{ forloop.index }} link link--text list-menu__item focus-inset"
                  >
                    <div class="menu-drawer__menu-wrap">
                      <div class="link-item">
                        {% for item in shop.metaobjects.navigation_icons.values %}
